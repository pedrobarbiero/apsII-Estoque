@model Estoque.Entities.Telefone

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Telefone</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                @*<select asp-for="Categoria" class="form-control"></select>*@
                <input asp-for="Categoria" class="form-control"></input>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Propriedade" class="control-label"></label>
                @*<select asp-for="Propriedade" class="form-control"></select>*@
                <input asp-for="Propriedade" class="form-control"></input>

                <span asp-validation-for="Propriedade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="PossuiWhatsapp" /> @Html.DisplayNameFor(model => model.PossuiWhatsapp)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
