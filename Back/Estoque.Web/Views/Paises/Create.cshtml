@model Estoque.DAL.Entities.Pais

@{
    ViewData["Title"] = "Consulta";
    ViewData["Formulario"] = "Países";
    ViewData["Acao"] = "Adicionar";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-secondary" asp-action="Index"><i class="fa fa-arrow-left"></i>&nbsp; Voltar</a>
                <button type="submit" class="btn btn-success pull-right"><i class="fa fa-plus"></i>&nbsp; Adicionar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
