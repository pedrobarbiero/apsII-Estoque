@model Estoque.Entities.Pais

@{
    ViewData["Title"] = "Consulta";
    ViewData["Formulario"] = "Países";
    ViewData["Acao"] = "Editar";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <a class="btn btn-secondary" asp-action="Index"><i class="fa fa-arrow-left"></i>&nbsp; Voltar</a>
                <button type="submit" class="btn btn-default pull-right"><i class="fa fa-plus"></i>&nbsp; Salvar</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
